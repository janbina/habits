<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Base.Theme.Habits" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="actionBarTheme">@style/ThemeOverlay.Habits.ActionBar</item>

        <item name="windowActionModeOverlay">true</item>

        <!-- Default widget styles -->
        <item name="toolbarStyle">@style/Widget.Habits.Toolbar</item>
        <item name="appBarLayoutStyle">@style/Widget.MaterialComponents.AppBarLayout.Surface</item>

        <!-- Preferences -->
        <item name="preferenceTheme">@style/Habits.PreferenceThemeOverlay</item>
    </style>

    <style name="Theme.Habits" parent="Base.Theme.Habits">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ThemeOverlay.Habits.ActionBar" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar" />

    <style name="Widget.Habits.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="titleTextAppearance">?attr/textAppearanceHeadline6</item>
        <item name="subtitleTextAppearance">?attr/textAppearanceSubtitle2</item>
    </style>

    <style name="Habits.PreferenceThemeOverlay" parent="PreferenceThemeOverlay">
        <item name="android:layout">@layout/fragment_settings</item>
    </style>

</resources>